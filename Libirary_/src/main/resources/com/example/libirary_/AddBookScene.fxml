         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <TextField fx:id="coverPathTextField" layoutX="282.0" layoutY="500.0" prefWidth="193.0" />
      <Label layoutX="50.0" layoutY="300.0" text="Genre :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <TextField fx:id="genreTextField" layoutX="282.0" layoutY="300.0" prefWidth="193.0" />
      <CheckBox fx:id="statusCheckBox" layoutX="282.0" layoutY="800.0" mnemonicParsing="false" text="In Stock">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></CheckBox>
      <Button layoutX="339.0" layoutY="897.0" mnemonicParsing="false" onAction="#AddBook" stylesheets="@buttons.css" text="ADD" />
      <Label fx:id="successLabel" layoutX="439.0" layoutY="905.0" prefHeight="17.0" prefWidth="8.0">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <CheckBox fx:id="availableCheckBox" layoutX="485.0" layoutY="800.0" mnemonicParsing="false" text="Available for borrowing">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></CheckBox>
      <TextField fx:id="daysTillReturnTextField" layoutX="282.0" layoutY="698.0" prefWidth="193.0" />
      <Label layoutX="50.0" layoutY="700.0" text="Borrow Expire Date :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#Back" stylesheets="@buttons.css" text="Back" />
      <Label layoutX="806.0" layoutY="100.0" text="Rating :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="ratingTextField" layoutX="1045.0" layoutY="100.0" prefHeight="25.0" prefWidth="193.0" />
      <Label layoutX="806.0" layoutY="200.0" text="Book Amount in stock :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="bookAmountTextField" layoutX="1045.0" layoutY="200.0" prefHeight="25.0" prefWidth="193.0" />
      <Label layoutX="806.0" layoutY="300.0" text="Book Description :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font>
      </Label>
      <TextArea fx:id="descriptionTextArea" layoutX="845.0" layoutY="340.0" prefHeight="303.0" prefWidth="379.0" wrapText="true" />
