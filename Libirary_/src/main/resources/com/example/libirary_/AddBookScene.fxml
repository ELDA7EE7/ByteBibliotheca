<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libirary_.AddBookSceneController">
   <children>
      <Label layoutX="50.0" layoutY="100.0" text="Title :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <TextField fx:id="nameTextField" layoutX="282.0" layoutY="100.0" prefHeight="25.0" prefWidth="193.0" />
      <Label layoutX="50.0" layoutY="200.0" text="Author :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <TextField fx:id="authorTextField" layoutX="282.0" layoutY="200.0" prefWidth="193.0" />
      <Label layoutX="50.0" layoutY="400.0" text="Publish Year :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <TextField fx:id="publishyearTextField" layoutX="282.0" layoutY="400.0" prefWidth="193.0" />
      <Label layoutX="50.0" layoutY="600.0" text="Price :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
      <TextField fx:id="priceTextField" layoutX="282.0" layoutY="600.0" prefWidth="193.0" />
      <Label layoutX="50.0" layoutY="800.0" text="Status :">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font></Label>
