<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" prefHeight="70.0" prefWidth="1820.0" spacing="20.0" style="-fx-background-color: #191919;" stylesheets="@ShoppingCart.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libirary_.ShoppingCartBookController">
   <children>
      <Label fx:id="bookName" alignment="CENTER" maxWidth="355.0" minWidth="355.0" prefHeight="25.0" prefWidth="355.0" styleClass="tableHeading" text="Iron Flame" />
      <Label fx:id="author" alignment="CENTER" contentDisplay="CENTER" maxWidth="345.0" minWidth="345.0" prefHeight="25.0" prefWidth="345.0" styleClass="tableHeading" text="Rebecca Yarros" />
      <Label fx:id="genre" alignment="CENTER" maxWidth="230.0" minWidth="230.0" prefHeight="25.0" prefWidth="230.0" styleClass="tableHeading" text="Fantasy" />
      <Label fx:id="rating" alignment="CENTER" maxWidth="65.0" minWidth="65.0" prefWidth="65.0" styleClass="tableHeading" text="4.8" />
      <Label fx:id="price" alignment="CENTER" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" styleClass="tableHeading" text="190" />
      <Label fx:id="quantity" alignment="CENTER" maxWidth="105.0" minWidth="105.0" prefHeight="25.0" prefWidth="105.0" styleClass="tableHeading" text="2" />
      <Label fx:id="totalPrice" alignment="CENTER" contentDisplay="CENTER" maxWidth="210.0" minWidth="210.0" prefHeight="25.0" prefWidth="210.0" styleClass="tableHeading" text="380" />
      <HBox alignment="CENTER" fillHeight="false" prefHeight="70.0" prefWidth="295.0" spacing="20.0">
         <children>
            <Spinner fx:id="quantitySlider" prefHeight="40.0" prefWidth="53.0" styleClass="spinner1" />
            <Button fx:id="deleteBook" mnemonicParsing="false" onAction="#deleteBookClicked" prefHeight="50.0" prefWidth="50.0" styleClass="deleteButton">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../UserInterfaceIcons/RemoveBook.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
